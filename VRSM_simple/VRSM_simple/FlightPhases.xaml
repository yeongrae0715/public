<UserControl x:Class="VRSM_simple.FlightPhases"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRSM_simple"
        mc:Ignorable="d"
        Height="auto" Width="auto" >
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    
        <TextBlock FontWeight="Bold" FontSize="20" Margin="0, 0, 0, 10" Text="Flight Phases" />
        
        <RadioButton x:Name="RB_1" Content="{Binding Phase_1}"  />
        <RadioButton x:Name="RB_2" Content="{Binding Phase_2}" />
        <RadioButton x:Name="RB_3" Content="{Binding Phase_4}" />
        <RadioButton x:Name="RB_4" Content="{Binding Phase_3}" />
        <RadioButton x:Name="RB_5" Content="{Binding Phase_5}" />

        <Button x:Name="Phase_Start_Button" Content="Start" Margin="0, 10, 0, 0" VerticalAlignment="Bottom" Click="Phase_Start_Button_Click" />
    
    </StackPanel>
</UserControl>
